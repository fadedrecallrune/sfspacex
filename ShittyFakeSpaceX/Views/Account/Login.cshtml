@model ShittyFakeSpaceX.ViewModels.LoginViewModel

<div class="page-header">
    <div class="page-header-image" style="background-image:url(../images/start.jpg)"></div>
    <div class="container">
        <div class="col-md-4 content-center">
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="col-sm-6 offset-md-2">
                    <div class="input-group form-group-no-border input-lg">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Email...">
                    </div>
                </div>
                <div class="col-sm-6 offset-md-2">
                    <div class="input-group form-group-no-border input-lg">
                        <input asp-for="Password" type="password" placeholder="Password..." class="form-control" />
                    </div>
                </div>
                <div class="col-sm-6 offset-md-2 text-center">
                    <br />
                    <input type="submit" value="Login" class="btn btn-primary btn-round btn-lg btn-block" />
                </div>
                <div class="pull-left col-md-10">
                    <br />
                    <h6>
                        <a href="~/Account/Create" class="link">Create Account</a>
                    </h6>
                </div>
            </form>
        </div>
    </div>
</div>